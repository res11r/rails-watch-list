<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, :width=>1000, :height=>1000, :crop=>"limit" unless @list.photo.blank?%>);">
  <div class="container d-flex justify-content-center">
    <h1 class="fs-1"><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <h2 class="text-center">Add movie to list</h2>
  <div class="row">
    <div class="d-flex flex-wrap justify-content-evenly" >
      <%= simple_form_for [@list, @bookmark], html: { class: "col-6"} do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie, input_html: { data: { controller: 'select2' }} %>
        <%= f.button :submit, 'Add movie', :class => 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex flex-wrap justify-content-evenly" >
        <% @bookmarks.each do |bookmark| %>
      <div class="card mt-4" style="width: 25rem;">
        <%= image_tag(bookmark.movie.poster_url, class:"card-img-top", alt:"apartment") %>
        <div class="card-body bg-light border-bottom">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text fs-6"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-body">
          <p class="card-text fs-6"><i class="fa-solid fa-quote-left fs-3 mr-2"></i><%=  bookmark.comment %></p>
          <p class="card-text fs-6"> <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %></p>
        </div>
      </div>
      <% end %>

    </div>
  </div>
  <div class="d-flex justify-content-evenly mt-5">
    <div class="row col-4">
      <h2>Reviews</h2>
      <% @list.reviews.each do |review| %>
      <p><strong><%= review.rating%>/5</strong> </p>
      <p><%= review.content %></p>
      <hr>
      <% end %>
    </div>
    <div class="row col-4 bg-light p-4">
      <h2>Add your review</h2>
      <%= simple_form_for [@list, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.button :submit, 'Submit review', :class => 'btn btn-success' %>
      <% end %>
    </div>
    </div>
</div>
