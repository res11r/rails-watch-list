<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.istockphoto.com/photos/empty-red-armchairs-of-a-theater-ready-for-a-show-picture-id1295114854?b=1&k=20&m=1295114854&s=170667a&w=0&h=W9ZbN674554Jsamxo5AfoO3DrSm_7qYS1EnANgusi9o=);">
  <div class="container d-flex justify-content-center">
    <h1 class="fs-1"><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-evenly">
  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-success' %>
  <% @bookmarks.each do |bookmark| %>
  </div>
  <div class="d-flex flex-wrap justify-content-evenly" >
    <div class="card" style="width: 25rem;">
      <%= image_tag('https://media.istockphoto.com/photos/empty-red-armchairs-of-a-theater-ready-for-a-show-picture-id1295114854?b=1&k=20&m=1295114854&s=170667a&w=0&h=W9ZbN674554Jsamxo5AfoO3DrSm_7qYS1EnANgusi9o=', class:"card-img-top", alt:"apartment") %>
      <div class="card-body bg-light border-bottom">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text fs-6"><%= bookmark.movie.overview %></p>
      </div>
      <div class="card-body">
        <p class="card-text fs-6"><i class="fa-solid fa-quote-left"></i><%=  bookmark.comment %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
